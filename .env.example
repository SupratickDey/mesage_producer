# Message Producer Configuration
# Copy this file to .env and update values as needed

# Producer Settings
PRODUCER_MESSAGE_COUNT=0
PRODUCER_WORKERS=12
PRODUCER_BUFFER_SIZE=15000

# Output Settings
OUTPUT_FORMAT=parquet
OUTPUT_DIRECTORY=/app/output

# CSV Settings
CSV_ENABLED=false
CSV_FILENAME=transactions.csv
CSV_BUFFER_SIZE=10000

# Parquet Settings
PARQUET_ENABLED=false
PARQUET_FILENAME=transactions.parquet
PARQUET_ROW_GROUP_SIZE=50000
PARQUET_COMPRESSION=snappy

# Kafka Settings
KAFKA_ENABLED=true
KAFKA_BROKERS=kafka:19092
KAFKA_TOPIC=transactions
KAFKA_COMPRESSION=snappy
KAFKA_BATCH_SIZE=5000
KAFKA_FLUSH_FREQUENCY=100
KAFKA_ASYNC=true

# Data File Paths
DATA_CURRENCY_RATES=/app/data/currency_rates.json
DATA_AGENTS=/app/data/agents.json
DATA_GAME_CATEGORIES=/app/data/game_categories.json
DATA_CURRENCIES=/app/data/currencies.json

# Metrics Settings
METRICS_INTERVAL=5
METRICS_DETAILED=true
